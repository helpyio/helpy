%>

<%- title "#{AppSettings['settings.site_name']}: #{@page_title}" %>

<div class="ticket-header row vcenter">
  <div class="col-md-8 text-left">
    <div class="dropdown">
      <button class="btn btn-basic dropdown-toggle" data-toggle="dropdown">Sort By <span class="caret"></span></button>
      <ul class="dropdown-menu">
        <li><%= link_to "Created At : Descending", tickets_en_path(sort:"created_desc") %></li>
        <li><%= link_to "Created At : Ascending", tickets_en_path(sort:"created_asc") %></li>
        <li><%= link_to "Last Active : Descending", tickets_en_path(sort:"active_desc") %></li>
        <li><%= link_to "Last Active : Ascending", tickets_en_path(sort:"active_asc") %></li>
        <li><%= link_to "Ticket Number : Descending", tickets_en_path(sort:"ticket_desc") %></li>
        <li><%= link_to "Ticket Number : Ascending", tickets_en_path(sort:"ticket_asc") %></li>
    </div>
    <br>
    <span class="truncate-ellipsis">
      <%= t(:subject) %>
    </span>
  </div>
  <div class="col-md-1">
  </div>
  <div class="col-md-1">
  </div>
  <div class="last-active less-important col-md-2 text-right">
    <%= t(:last_activity) %>
  </div>
</div>
<%= render :partial => 'topics/ticket', :collection => @topics %>
<% if @topics.total_count == 0 %>
  <div class="text-center verticalness"><%= t(:no_tickets) %></div>
<% end %>


<div class="text-right">
  <%= paginate @topics %>
</div>
