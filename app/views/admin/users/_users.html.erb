<%= content_tag :h3, class: 'view-header' do %>
  <%= show_responsive_nav %>
  <%=  t(:users, default: "Users") %><%= ": " + role_label(params[:role]).html_safe if params[:role].present? %>
  <div class="pull-right nav-new-button">
    <%= link_to t(:create_user, default: "Create New User"), new_admin_user_path,
    remote: false, class: 'btn btn-primary' if current_user.is_admin? %>
  </div>
<% end %>

<table id="users">
  <col width="5%">
  <col width="85%">
  <col width="10%">

  <%= render partial: 'admin/users/user', collection: @users if @users %>
</table>

<div class="text-center">
  <%= paginate @users if @users %>
</div>
