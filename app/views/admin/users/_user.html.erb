<tr id="user-<%= user.id %>" class="user">
  <td>
    <div class="user-thumbnail pull-left user-link">
      <%= link_to avatar_image(user, size=40), admin_user_path(user.id), remote: true %>
    </div>
  </td>
  <td class="user-link">
    <span class="more-important"><%= link_to user.name.titleize, admin_user_path(user.id), remote: true, class: 'user-link' %></span><br/>
    <span class="less-important last-active">Last Seen: <%= last_active_time(user.last_sign_in_at) %></span>
  </td>
  <td>
    <span class="label label-count pull-right">
      <%= user.topics.count %>
    </span>
  </td>
  <td class="text-right">
    <div class="btn-group">
      <span id="row-<%= user.id %>" data-toggle="dropdown" aria-expanded="false" class='btn dropdown-toggle glyphicon glyphicon-align-justify'></span>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><%= link_to t(:discussions, default: 'Discussions'), admin_user_path(user.id), remote: true %></li>
        <li><%= link_to t(:edit_user, default: 'Edit User'), admin_user_path(user.id, mode: 'edit'), remote: true %></li>
      </ul>
    </div>
  </td>
</tr>
