  $('[data-provider="summernote"]').each(function () {
    $(this).summernote({
      lang: '<%= summernote_locale %>',
      height: 500,
      prettifyHtml: true,
      codemirror: {
        theme: 'monokai',
        mode: "htmlmixed",
        tabsize: 2,
        smartIndent: true,
        lineNumbers: true,
        lineWrapping: true,
        tabMode: 'indent'
      },
      callbacks: {
        onImageUpload: function (files) {
          return Helpy.sendFile(files[0], $(this));
        },
        onMediaDelete: function (target, editor, editable) {
          var image_id;
          image_id = target[0].id;
          if (!!image_id) {
            Helpy.deleteFile(image_id);
          }
          return target.remove();
        },
        onInit: function (e) {
          var storedContent = localStorage.getItem("edit_doc_<%= @doc.id %>_draft");
          if (storedContent.length > 0) {
          $("#doc_body").summernote("code", storedContent);
          }
        }
      }

      // hint: {
