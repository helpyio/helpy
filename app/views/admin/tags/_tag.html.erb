  <div class="row tag vcenter border-bottom" id="tag-<%= tag.id %>">
    <div class="text-left col-md-6 col-sm-6 col-xs-6">
      <div class="color-sample" style="background-color: <%= tag.color %>"></div>
      <span class="more-important"><%= content_tag('span', tag.name) %></span>
      <span class="less-important"><%= tag.description %></span>
    </div>
    <div class="text-right col-md-6 col-sm-6 col-xs-6">
      <div class="btn-tag">
        <span id="row-<%= tag.id %>" data-toggle="dropdown" aria-expanded="false" class='btn dropdown-toggle fas fa-ellipsis-v'></span>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
          <li><%= link_to t(:edit, default: 'Edit'), edit_admin_tag_path(tag.id) %></li>
          <li><%= link_to t(:delete, default: 'Delete'), admin_tag_path(tag.id), method: :delete, 
              data: {remote: true, confirm: 'Do you really want to delete this tag?'} %></li>
        </ul>
      </div>
    </div>
  </div>
