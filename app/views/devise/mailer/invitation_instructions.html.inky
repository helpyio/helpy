<container>
  <row>
    <columns class="callout panel">
      <spacer size="16"></spacer>

      <p><%= t("devise.mailer.invitation_instructions.hello", email: (@resource.name || @resource.email)) %></p>

      <p><%= t("devise.mailer.invitation_instructions.someone_invited_you", url: AppSettings['settings.site_name']) %></p>

      <p><%= link_to t("devise.mailer.invitation_instructions.accept"), accept_invitation_url(@resource, :invitation_token => @token, host: AppSettings['settings.site_url']) %></p>

      <% if @resource.invitation_due_at %>
        <p><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></p>
      <% end %>

      <% if @resource.invitation_message %>
        <p><%= @resource.invitation_message %></p>
      <% end %>

      <p><%= t("devise.mailer.invitation_instructions.ignore").html_safe %></p>
    </columns>
  </row>
</container>
