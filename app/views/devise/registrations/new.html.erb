<div id="page-title" class="row">
  <div class="col-md-8" id="page-title-left">
    <span class="hidden-xs">
      <%= render_breadcrumbs('') %>
    </span>
    <h1><%= I18n.t('devise.registrations.new.sign_up') %></h1>
  </div>
  <div class="col-md-4" id="page-title-right">
  </div>
</div>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>

    <%= devise_error_messages! %>

    <%= f.input :email, autofocus: true %>
    <%= f.input :name %>
    <%= f.input :bio, input_html: {:rows => 4, :cols => 60} %>
    <%= f.input :company %>
    <%= f.input :title %>
    <%= f.input :signature, input_html: {:rows => 4, :cols => 60} %>
    <%= f.attachinary_file_field :avatar unless Cloudinary.config.cloud_name.nil? %>

    <% if @validatable %>
    <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
    <% end %>
    <%= f.input :password, autocomplete: "off" %>
    <%= f.input :password_confirmation, autocomplete: "off" %>

    <%= f.submit I18n.t('devise.registrations.new.sign_up'), class: 'btn btn-warning' %>
<% end %>
