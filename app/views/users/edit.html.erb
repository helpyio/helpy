<%= bootstrap_form_for(@user) do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :email %>
  <%= f.text_field :company %>
  <%= f.text_field :title %>
  <%= f.text_field :work_phone %>
  <%= f.text_field :cell_phone %>
  <%= f.text_field :street %>
  <%= f.text_field :city %>
  <%= f.text_field :state %>
  <%= f.text_field :zip %>
  <%= f.attachinary_file_field :avatar %>

  <%= f.text_area :signature %>
  <%= f.text_area :bio %>
  <%= f.submit 'Save' %>
<% end %>
