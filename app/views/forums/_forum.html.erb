%>

<tr class="forum link-row">
  <td class="name">
    <div class="more-important">
      <%= link_to h(forum.name), forum_topics_path(:forum_id => forum) -%> <%= '(private)' if forum.private? %>
    </div>

    <div class="less-important">
      <%= h(forum.description) -%>
    </div>
  </td>

  <td>
    <span class="label label-count pull-right"><%= forum.topics.count %></span>
  </td>

  <td class="last-active last_post less-important text-right">
    <%= last_active_time(forum.last_post_date) %>
  </td>
</tr>
